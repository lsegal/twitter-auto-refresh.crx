{
  "name": "Twitterâ„¢ Auto Refresh",
  "description": "Automatically refreshes the Twitter Home feed every minute.",
  "version": "1.0",
  "manifest_version": 3,
  "options_page": "options.html",
  "icons": {
    "16": "/icons/icon16.png",
    "32": "/icons/icon32.png",
    "48": "/icons/icon48.png",
    "128": "/icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.twitter.com/*"
      ],
      "js": [
        "refresh.js"
      ]
    }
  ]
}
